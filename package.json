{
  "name": "algoexpert-solutions",
  "version": "0.0.1",
  "description": "Solutions for exercises from algoexpert.io",
  "private": true,
  "scripts": {
    "start": "npm run test:watch",
    "fix:format": "npm run test:format -- --write",
    "fix:lint": "npm run test:lint -- --fix",
    "postinstall": "husky install",
    "test:run": "vitest run",
    "test": "vitest",
    "test:format": "prettier --check \"src/**/*.ts\"",
    "test:lint": "eslint --ext=ts src",
    "test:types": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config .prettierrc --write",
      "eslint --fix"
    ]
  },
  "author": "Patryk Lizo≈Ñ",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.23.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "husky": "^5.0.9",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^5.1.6",
    "vitest": "^0.24.1"
  }
}
